#!/usr/bin/env bash
# Create a script to install and configure HAProxy on lb-01 server
# Configure HAProxy to send traffic to web-01 and web-02 servers
# Distribute requests using a roundrobin algorithm
# Make sure that HAProxy can be managed via an init script
# Install and configure HAproxy on my lb-01 server.
apt-get -y update
apt-get install -y --no-install-recommends software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-2.9
apt-get -y install haproxy=2.9.\*

# enable haproxy to be started by init script
echo "ENABLED=1" > /etc/default/haproxy

# Edit config files to listen to web1 and web2 servers                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                
echo "
   listen load_balancer
   bind *:80
   mode http
   balance roundrobin
   option httpclose
   option forwardfor
   server 349269-web-01 54.144.152.30:80 check
   server 349269-web-02 35.174.176.12:80 check
" >> /etc/haproxy/haproxy.cfg

service haproxy start
